<launch>
    <arg name="target" default="192.168.1.175" />

    <!-- The TCP sender node -->
	<!-- The UDP sender node -->
	<node name="sender" pkg="nimbro_topic_transport" type="sender" output="screen">

		<!-- The destination host name or IP address -->
		<param name="destination_addr" value="$(arg target)" />
		<param name="port" value="17002" />

		<!-- Load the list of topics from a YAML file -->
		<rosparam command="load" file="$(find nimbro_topic_transport)/launch/topics_machine2.yaml" />
	</node>

	<node name="receiver" pkg="nimbro_topic_transport" type="receiver" output="screen">
		<!-- The port to receive packets on -->
		<param name="port" value="17001" />

		<!-- Remap topics so that sender & receiver do not clash if run on the
		  same machine. This can also be used to distinguish remote topics
		  from local ones.
		 -->
		<param name="topic_prefix" value="" />

		<!-- Rewrite messages so that tf frame_ids are prefixed with the
		  specified string.
		-->
		<param name="tf_prefix" value="" />
	</node>
</launch>